@{
    ViewData["Title"] = "Admin Verification";
}

<div class="container py-3 min-vh-81 d-flex flex-column justify-content-center align-items-center">
    <div class="col-md-7 card shadow rounded-3 my-auto">
        <div class="card-header p-3 bg-primary text-uppercase text-white text-center">
            <h2 class="mb-0 fw-bold">Admin Verification</h2>
        </div>
        <div class="card-body p-3">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col">
                        <div class="form-floating mb-3">
                            <input class="form-control form-control-sm" type="password" placeholder="Password" id="password" name="password" />
                            <label class="control-label" for="password">Password</label>
                        </div>
                    </div>
                    <div class="form-group mt-3 d-flex justify-content-between">
                        <input type="submit" value="Submit" class="btn btn-success col-4" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
