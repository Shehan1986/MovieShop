@model MovieShop_Oregano.Models.Movie
    

@{
    ViewData["Title"] = "Create a Movie";
}

<style>	
	.min-vh-84 {
		min-height: 84vh !important;
	}

	.custom-file-button input[type=file] {
		margin-left: -2px !important;
	}

	.custom-file-button input[type=file]::-webkit-file-upload-button {
		display: none;
	}

	.custom-file-button input[type=file]::file-selector-button {
		display: none;
	}

	.custom-file-button:hover label {
		background-color: #dde0e3;
		cursor: pointer;
	}
	.i-margin-right {
		margin-right: 5px;
	}

</style>


<div class="container py-3 min-vh-84 d-flex flex-column justify-content-center align-items-center">
	<div class="col-md-7 card shadow rounded-3 my-auto d-flex flex-row">
		<div class="card-header p-3 d-flex flex-column justify-content-between">
			<h2 class="mt-2 fw-bold">Create Movie</h2>
			<button asp-action="Index" class="btn btn-primary">Back to List</button>
		</div>

		<div class="card-body p-3">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating mb-3">
					<input asp-for="Title" class="form-control form-control-sm" placeholder="Movie Title" id="floatingInput" />
					<label asp-for="Title" class="control-label" for="floatingInput">Movie Title</label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Director" class="form-control form-control-sm" placeholder="Movie Director" id="floatingInput" />
					<label asp-for="Director" class="control-label" for="floatingInput">Movie Director</label>
					<span asp-validation-for="Director" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="ReleaseYear" class="form-control form-control-sm" placeholder="Release Year" id="floatingInput" />
					<label asp-for="ReleaseYear" class="control-label" for="floatingInput">Release Year</label>
					<span asp-validation-for="ReleaseYear" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Price" class="form-control form-control-sm" placeholder="Price" id="floatingInput" />
					<label asp-for="Price" class="control-label" for="floatingInput">Price</label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="input-group custom-file-button mb-3">
					<label asp-for="MovieImg" class="input-group-text">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-image i-margin-right" viewBox="0 0 16 16">
							<path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0" />
							<path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1z" />
						</svg>Movie Image
					</label>
					<input asp-for="MovieImg" class="form-control" type="file" id="inputGroupFileAddon" aria-describedby="inputGroupFileAddon" aria-label="Upload">
					<span asp-validation-for="MovieImg" class="text-danger"></span>
				</div>
				<div class="form-group mt-3">
					<input type="submit" value="Create Movie" class="btn btn-success"/>
				</div>
			</form>
		</div>
	</div>
</div>


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}