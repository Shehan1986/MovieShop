@{

    var isAuthenticatedString = Context.Session.GetString("IsAuthenticated");
    var isAuthenticated = !string.IsNullOrEmpty(isAuthenticatedString) && isAuthenticatedString == "true";

}

@if (!isAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Movie" asp-action="List">Movie Shop</a>
    </li>
}

@if (isAuthenticated)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Customers</a>
        <ul class="dropdown-menu dropdown-menu-dark" style="--bs-dropdown-bg: green;">
            <a class="dropdown-item text-white" asp-area="" asp-controller="Customer" asp-action="Index">Index</a>
            <a class="dropdown-item text-white" asp-area="" asp-controller="Customer" asp-action="Create">Create</a>
        </ul>
    </li>
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Movies</a>
        <ul class="dropdown-menu dropdown-menu-dark" style="--bs-dropdown-bg: green;">
            <a class="dropdown-item text-white" asp-area="" asp-controller="Movie" asp-action="Index">Index</a>
            <a class="dropdown-item text-white" asp-area="" asp-controller="Movie" asp-action="Create">Create</a>
        </ul>
    </li>
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Orders</a>
        <ul class="dropdown-menu dropdown-menu-dark" style="--bs-dropdown-bg: green;">
            <a class="dropdown-item text-white" asp-area="" asp-controller="Order" asp-action="Index">Index</a>
            <a class="dropdown-item text-white" asp-area="" asp-controller="Order" asp-action="Create">Create</a>
        </ul>
    </li>
}